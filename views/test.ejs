<%- include('./partials/header.ejs') %>

<h1>Test Form</h1>
<form id="form">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" name="email" aria-describedby="emailHelp"
            placeholder="Enter email as user name">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
            else.</small>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" name="password" placeholder="Password">
    </div>

    <button type="button" id="submit" class="btn btn-primary">Login</button>
    <button type="button" onclick="javascrtpt:window.location.href='/auth/registration'"
        class="btn btn-danger">Register</button>

</form>

<script>
    $(document)
    .ready(function(){
        $('#submit').click(function(){ 	
            var formData = JSON.stringify($("#form").serializeArray());
            console.log(formData)
            $.ajax({
                type :'POST',
                url : '/auth/test',
                cache: false,
                data: formData,
                dataType: "json",
                success: function(response) { 
                    console.log(response)
                }
            })
        }
    )})
    </script>
